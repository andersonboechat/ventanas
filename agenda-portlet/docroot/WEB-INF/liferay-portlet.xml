<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>agenda</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>false</instanceable>
		<ajaxable>false</ajaxable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-javascript>/js/date-pt-BR.js</header-portlet-javascript>
		<footer-portlet-javascript>/js/locale.js</footer-portlet-javascript>
		<css-class-wrapper>agenda-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>agenda-admin</portlet-name>
		<icon>/admin-icon.png</icon>
		<control-panel-entry-category>content</control-panel-entry-category>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-javascript>/js/date-pt-BR.js</header-portlet-javascript>
		<footer-portlet-javascript>/js/locale.js</footer-portlet-javascript>
		<css-class-wrapper>agenda-admin-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>