<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="book-portlet" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:comp/env/jdbc/vtnDS</non-jta-data-source>
		<class>br.com.abware.complaintbook.persistence.entity.BaseEntity</class>
		<class>br.com.abware.complaintbook.persistence.entity.Answer</class>
		<class>br.com.abware.complaintbook.persistence.entity.Occurrence</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>  
			<property name="hibernate.query.substitutions" value="true 1,false 0"/>
			<property name="hibernate.hbm2ddl.auto" value="validate"/>
		</properties>
	</persistence-unit>
</persistence>
